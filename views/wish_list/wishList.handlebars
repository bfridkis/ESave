<div class="listContainer">

<h1 align="center">{{user.first_name}}'s Wish List </h1><br />
  <table id="wishlist">
      <thead>
          <th>Product</th>
          <th>Retailer</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Promotion</th>
      </thead>
      <tbody>
          {{#each list}}
          <tr>
              <td>{{product}}</td>
              <td>{{retailer}}</td>
              <td>{{quantity}}</td>
              <td>{{current_price}}</td>
              {{#if promotion}}
              <td>{{promotion}}</td>

              {{else}}
              <td>None Available</td>
              {{/if}}
          </tr>
          {{/each}}
      </tbody>
  </table>


