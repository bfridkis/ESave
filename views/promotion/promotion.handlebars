  <body>
    <nav class="navbar fixed-top navbar-expand navbar-light bg-light">
    <a class="navbar-brand" href="/"><img src="{{navbarLogo}}" class="banner-logo"></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li id="logged-in-message" class="nav-item">
          (Logged in as {{user.username}})
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/" data-toggle="tooltip" data-placement="top" title="Home">
            <i class="fas fa-user navbar-button"></i>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" data-toggle="tooltip" data-placement="top" title="Settings">
            <i class="fas fa-cog navbar-button"></i>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout" data-toggle="tooltip" data-placement="top" title="Logout">
            <i class="fas fa-door-closed navbar-button"></i>
          </a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="main-logo-outer-container">
        <div class="main-logo-inner-container">
            <img src="images/logo-medium.jpg" class="main-logo"><span id="save-text">$ave</span>
        </div>
    </div>
    <br />
    <div class="data-outer-container">
	<form id='data' action="/home">
	  <legend id="legend"><h1>Great Deals for {{user.first_name}}!!</h1></legend>
    <br>
	   <!-- <div class="data-inner-container" style="padding-top:50px;padding-bottom:15px"> -->
      <div class = "container-fluid">
        <div class = "d-flex flex-row flex-nowrap">
	    <fieldset>
		{{#each promotions}}
<!--     <div class = "card card body">
 -->		<ul class = "promos" style="list-style-type:none" class = "promotions">
        <br>
		    <li id = "productID" hidden>{{product}}</li>
        <li id = "description" style="padding-right:30px"><h3>{{description}}</h3></li>
		    <li class="col-xs-6 flex-xs-middle" id = "retailer" style="padding-right:30px"><span class = "title">Retailer:</span> {{retailer_name}}</li>
		    <li class="col-xs-6 flex-xs-middle" id = "discount" style="padding-right:30px"><span class = "title">Discount:</span> ${{discount}}</li>
		    <li id = "ecoupon" style="padding-right:30px"><span class = "title">Ecoupon:</span> {{ecoupon}}</li>
        {{#if product_name}}<li id = "product" style="padding-right:30px"><span class = "title">For Product:</span> {{product_name}}</li>{{/if}}
        {{#if qt_required}}<li id = "quantity" style="padding-right:30px"><span class = "title">Quantity Required:</span> {{qt_required}}</li>{{/if}}
        {{#if min_spend}}<li id = "quantity" style="padding-right:30px"><span class = "title">Minimum Purchase:</span> ${{min_spend}}</li>{{/if}}
        <br>
        {{#if product}}
        <li id = "wish-list" class="promo_{{id}}_wl_li"><i onclick="addWishList('wish-list', '{{product_name}}',
                                                                  '{{qt_required}}',
                                                                  '{{retailer_name}}',
                                                                  '{{product}}',
                                                                  'promo_{{id}}_wl')"
            class='fas fa-clipboard-check promo_{{id}}_wl'></i>&nbsp&nbsp Add to your wishlist!</li>
        <li id = "favorites" class="promo_{{id}}_fv_li"><i onclick="addWishList('favorites', '{{product_name}}',
                                                                  '{{qt_required}}',
                                                                  '{{retailer_name}}',
                                                                  '{{product}}',
                                                                  'promo_{{id}}_fv')"
            class='fas fa-heart promo_{{id}}_fv'></i>&nbsp&nbsp Add to your favorites!</li>
        {{/if}}
		<br>
		</ul>
		{{/each}}
  </div>
	   </fieldset>
   </div>
	</form>
    </div>
    <footer>
      <div id="button-container" align="center">
  <ul>
          <i class="fab fa-facebook social-button"></i>
          <i class="fab fa-twitter-square social-button"></i>
          <i class="fas fa-envelope social-button"></i>
  </ul>
      </div>
    </footer>
    <script src='promotion.js'></script> <!--can put filename in context so not hard coded-->
  </body>
</html>

