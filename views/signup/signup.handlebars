
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<div class="main-logo-outer-container">
		<div class="main-logo-inner-container">
			<img src="images/logo-medium.jpg" class="main-logo"><span id="save-text">$ave</span>
		</div>
	</div>

	<br />

	<!-- show any messages that come back with authentication -->
	{{#if message}}
		<!-- <div class="alert alert-danger">{{message}}</div> -->
		<div class="alert-container">
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				{{message}}
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		</div>
	{{/if}}

	<!-- LOGIN FORM -->
	<form action="/signup" method="post">
		<br />
		<h2 align="center"><span class="fa fa-sign-in"></span> Signup</h2>

		<div class="container">
			<label>Username</label>
			<input type="text" name="username">

			<label>Password</label>
			<input type="password" name="password">

			<label>Re-Enter Password</label>
			<input type="password" name="passwordrepeat">

			<label>Email</label>
			<input type="text" name="email">

			<label>First Name</label>
			<input type="text" name="firstname">

			<label>Last Name</label>
			<input type="text" name="lastname">

			<button type="submit">Signup</button>

		</div>
		<div class="container" style="background-color:#f1f1f1">
			<p align="center">Already have an account? <a href="/login">Login</a></p>
		</div>
	</form>

	<div id="button-container" align="center">
		<i class="fab fa-facebook social-button"></i>
		<i class="fab fa-twitter-square social-button"></i>
		<i class="fas fa-envelope social-button"></i>
	</div>



