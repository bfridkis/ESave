
<body>
<link rel="stylesheet" type="text/css" href="loginStyle.css" type="text/css">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <div class="main-logo-outer-container">
    <div class="main-logo-inner-container">
      <img src="images/logo-medium.jpg" class="main-logo"><span id="save-text">$ave</span>
    </div>
  </div>
  <br />

  <!-- show any messages that come back with authentication -->
{{#if message}}
  <!-- <div class="alert alert-danger">{{message}}</div> -->
  <div class="alert-container">
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      {{message}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close" value=".float-right">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
{{/if}}

  <form id="login-page" action="/login" method="post">

    <br />
    <h2 align="center"><span class="fa fa-user"></span> User Login</h2>

    <div class="container">
      <label for="username">Username</label>
      <input type="text" placeholder="Enter Username" name="username" required>
      <br />
      <label for="password">Password</label>
      <input type="password" placeholder="Enter Password" name="password" required>

      <button type="submit">Login</button>
      <label>
      <input type="checkbox" id="remember" name="remember" value="1"> Remember me
    </label>
    </div>

    <div class="container" style="background-color:#f1f1f1">
      <button type="button" class="cancelbtn"><a href="/signup">Register</a></button>
      <span class="psw"><a href="#">Forgot password?</a></span>
    </div>
  </form>

  <div id="button-container" align="center">
  <i class="fab fa-facebook social-button"></i>
  <i class="fab fa-twitter-square social-button"></i>
  <i class="fas fa-envelope social-button"></i>
</div>

</body>


